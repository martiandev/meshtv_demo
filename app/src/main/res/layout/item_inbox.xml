<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="messageVM"
            type="com.ph.bittelasia.meshtvlibrary.viewmodel.iptv.MeshMessageViewModel" />

        <variable
            name="message"
            type="com.ph.bittelasia.meshtvlibrary.database.entity.iptv.MeshMessage"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:onClick="@{()->messageVM.get(message.id)}"
        android:padding="16dp"
        android:layout_margin="2dp"
        android:background="@drawable/item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            app:layout_constraintWidth_percent="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/h_inn_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_date"
            android:text="@{message.messg_from}"
            app:layout_constraintTop_toTopOf="parent"
            />
        <com.ph.bittelasia.ds.custom.ScrollingContinuousTextView
            android:id="@+id/tv_subject"
            app:layout_constraintWidth_percent="0.7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@{message.messg_subject}"
            android:textColor="@color/h_inn_green"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/h_inn_green"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_name"
            android:text="@{message.messg_datetime}"
            app:layout_constraintTop_toTopOf="@+id/tv_name"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
