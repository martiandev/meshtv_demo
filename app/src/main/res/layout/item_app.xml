<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.ph.bittelasia.meshtvlibrary.preference.object.iptv.MeshSTB"/>
        <variable
            name="stb"
            type="MeshSTB"/>
        <variable
            name="app"
            type="com.ph.bittelasia.meshtvlibrary.database.entity.app.AppEntity"/>
        <variable
            name="listener"
            type="com.ph.bittelasia.meshtvlibrary.util.imageloader.ImageLoaderListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_icon"
            android:focusable="true"
            android:clickable="true"
            app:imageUrl="@{stb.host+':'+stb.port+app.icon}"
            app:listener="@{listener}"
            android:padding="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tv_balloon"
            android:visibility="gone"
            android:background="@drawable/balloon"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_icon"
            app:layout_constraintRight_toRightOf="@+id/iv_icon"
            />

        <TextView
            android:id="@+id/tv_app"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            android:textStyle="bold"
            android:text="@{String.valueOf(app.display_name)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>